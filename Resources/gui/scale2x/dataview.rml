<rml>
  <head>
    <title>CARDS.</title>
    <link type="text/template" href="window.rml" />
    <style>

      body
      {
        padding: 0;

        left: 122px;
        top: 50px;
        font-size: 22px;
        line-height: 0.90;
        width: 328px;
      }

      div#window
      {
        /* Little extra room for page left, right sprites */
        height: 392px;
      }

      div#title_bar
      {
        display:none;
      }

      div#content {}

      datagridbody
      {
        text-align: left;
        padding-left: 5px;
      }

      datagridheader
      {
        margin-left: -6%;
        padding-right: 0px;
        padding-bottom: 0px;
        padding-left: 0px;
      }

      status
      {
        sprite-decorator: sprite-sheet;
        sprite-sheet-src: "images/scale2x/menu_elements.json";
        sprite-sheet-image-src: "images/scale2x/menu_elements.png";

        /* Account for the datagridrow text font size (height) for vertical
        alignment */
        margin-top: -20px;
      }

      /* Default state */
      status, status.available
      {
        sprite-sheet-frame: 0;
      }

      status.unavailable
      {
        sprite-sheet-frame: 1;
      }

      .available-card
      {
        color: white;
      }

      .unavailable-card
      {
        /* light gray */
        color: rgb(128,128,128);
      }

      /* Page flipping indicators */
      page
      {
        sprite-decorator: sprite-sheet;
        sprite-sheet-src: "images/scale2x/menu_elements.json";
        sprite-sheet-image-src: "images/scale2x/menu_elements.png";
        /* Do not show sprite */
        sprite-sheet-frame: -1;
      }

      page
      {
        top: 366px;
        width: 32px;
        height: 32px;
      }

      page.page-left
      {
        position: absolute;
        left: -4px;
        sprite-decorator: sprite-sheet;
        sprite-sheet-src: "images/scale2x/menu_elements.json";
        sprite-sheet-image-src: "images/scale2x/menu_elements.png";
        sprite-sheet-frame: 2;
      }

      page.page-right
      {
        position: absolute;
        left: 300px;
        sprite-decorator: sprite-sheet;
        sprite-sheet-src: "images/scale2x/menu_elements.json";
        sprite-sheet-image-src: "images/scale2x/menu_elements.png";
        sprite-sheet-frame: 3;
      }

    </style>
  </head>
  <body template="window">

      <datagrid source="cards_db.cards">
        <col fields="status" formatter="card_status" width="8%"></col>
        <col fields="available, id, name" formatter="card_name" width="75%">CARDS P. 1</col>
        <col fields="num" width="10%">NUM.</col>
      </datagrid>

      <!-- Assumes that the initial starting page is always one (index of zero) -->
      <page id='page-left' class='' />
      <page id='page-right' class='page-right' />

  </body>
</rml>
